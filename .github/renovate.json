{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config#2.8.1",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "description": "Pin GitHub Actions to specific commit SHAs",
      "matchManagers": [
        "github-actions"
      ],
      "versioning": "github-tags",
      "pinDigests": true,
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "matchPackageNames": [
        "/.*/"
      ],
      "labels": [
        "dependencies"
      ]
    },
    {
      "matchDatasources": ["terraform-provider"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "labels": [
        "terraform",
        "dependencies"
      ],
      "lockFileMaintenance": {
        "enabled": true
      }
    },
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "labels": [
        "dependencies"
      ]
    },
    {
      "description": "Update Go modules",
      "matchManagers": [
        "gomod"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "labels": [
        "go",
        "dependencies"
      ]
    },
    {
      "description": "Update Taskfile dependencies",
      "matchFileNames": [
        "Taskfile.yaml"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "labels": [
        "dependencies"
      ]
    },
    {
      "matchPackageNames": ["windsorcli/k8s-versions"],
      "matchDepNames": ["aks-kubernetes"],
      "extractVersion": "^aks-kubernetes-(?<version>\\d+\\.\\d+\\.\\d+)$",
      "versioning": "semver"
    },
    {
      "matchPackageNames": ["windsorcli/k8s-versions"],
      "matchDepNames": ["eks-kubernetes"],
      "extractVersion": "^eks-kubernetes-(?<version>\\d+\\.\\d+\\.\\d+)$",
      "versioning": "semver"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/ci\\.yaml$/"
      ],
      "datasourceTemplate": "github-commits",
      "packageNameTemplate": "windsorcli/cli",
      "versioningTemplate": "semver",
      "matchStrings": [
        "ref:\\s*(?<currentValue>main)"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/ci\\.yaml$/"
      ],
      "matchStrings": [
        "(^|\\s)WINDSORCLI_VERSION:\\s*(?<currentValue>v[\\d\\.]+)"
      ],
      "depNameTemplate": "version",
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "windsorcli/cli",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github/workflows/ci\\.yaml$/"
      ],
      "matchStrings": [
        "checks\\.yaml@(?<currentValue>v[\\d\\.]+)",
        "checkov\\.yaml@(?<currentValue>v[\\d\\.]+)"
      ],
      "depNameTemplate": "windsorcli/blueprint",
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "windsorcli/blueprint",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^.*\\.ya?ml$/",
        "/^.*\\.tf$/",
        "/^.*\\.tfvars$/"
      ],
      "matchStrings": [
        "\\s*#\\s*renovate:\\s*datasource=(?<datasource>[^\\s]+)\\s*depName=(?<depName>[^\\s]+)\\s*package=(?<package>[^\\s]+)(\\s*helmRepo=(?<helmRepo>[^\\s]+))?.*\n.*(?<currentValue>\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?)"
      ],
      "versioningTemplate": "semver",
      "datasourceTemplate": "{{datasource}}",
      "registryUrlTemplate": "{{#if helmRepo}}{{helmRepo}}{{/if}}",
      "packageNameTemplate": "{{package}}",
      "depNameTemplate": "{{depName}}"
    }
  ],
  "platformAutomerge": true,
  "labels": [
    "dependencies"
  ]
}
