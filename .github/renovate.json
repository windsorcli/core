{
  "extends": [
    "config:recommended",
    "github>aquaproj/aqua-renovate-config#2.6.0",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "description": "Pin GitHub Actions to specific commit SHAs",
      "matchManagers": [
        "github-actions"
      ],
      "versioning": "github-tags",
      "pinDigests": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "description": "Update Go modules",
      "matchManagers": [
        "gomod"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Update Taskfile dependencies",
      "matchFileNames": [
        "Taskfile.yaml"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Update aqua.yaml dependencies",
      "matchFileNames": ["aqua.yaml"],
      "managers": ["aqua"],
      "labels": ["aqua", "dependencies"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ],
  "platformAutomerge": true,
  "customManagers": [  ],
  "labels": [
    "dependencies"
  ]
}
